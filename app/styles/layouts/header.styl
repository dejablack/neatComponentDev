
//----------------------------------*\
// Header Style
//----------------------------------*/

header
	cf()
	background: blue;
	height: 40px;
	box-shadow: 0px 2px 10px 0px rgba(50, 50, 50, 0.75);
	
	//Logo
	#logo
		col(1/4)
		padding: 10px; 
		height: 100%;
		color: white;
		font-size: 2em;
		line-height: 20px;  
	
	//Nav
	nav
		col(1/4)
		shift(1/2)
		height: 100%;
		li
			span(1/4)
			text-align: center;
			font-size: 1.5em;
			height: 40px;
			padding-top: 8px;
			border-right: 5px solid white;
			&:first-child
				border-left: 5px solid white;
			&:last-child
				border-right: 0px solid white;
			&:hover
				cursor: pointer
				background: darken(blue, 10)
			a 
				color: white;
				text-decoration: none;